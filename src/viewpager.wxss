/* components/viewpager.wxss */
.viewpager {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
  background: #f0f;
}

hr {
  height: 2px;
  width: 1rem;
  border: none;
  border-top: 2px solid #185598;
  color: #185598;
}
